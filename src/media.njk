---
layout: layouts/base.njk
permalink: "/media.html"
---
<ul class="media">
{% for attachment in media %}
	<li>
		{# "mediaType": "video/mp4" #}
		{% if attachment.endsWith('.mp4') %}
			<video src="{{ attachment }}" autoplay loop></video>
		{% else %}
		{# "mediaType": "image/jpeg" #}
		{# "mediaType": "image/png" #}
		{# "mediaType": "image/webp" #}
		<a href="{{ attachment }}" target="_blank" loading="lazy">
			<img src="{{ attachment }}" />
		</a>
		{% endif %}
	</li>
{% endfor %}
</ul>

<style type="text/css">
ul.media {
	display: flex;
	flex-flow: row wrap;
	list-style-type: none;
	margin: 0;
	padding: var(--padding);
	gap: 0.5rem;
}
ul.media li {
	display: block;
	margin: 0;
	padding: 0;
	width: 32%;
	aspect-ratio: 1 / 1;
	overflow: hidden;
}
ul.media li:has(a) {
	border: 1px solid var(--text-color-links);
}
ul.media li img,
ul.media li video {
	width: 100%;
	height: 100%;
	object-fit: cover;
}
</style>